{
  "manifest_version": 2,
  "name": "Copy Message Link",
  "version": "1.0",
  "description": "Adds a button to copy a link to the current email message",
  "author": "Dominique Unruh",
  "applications": {
    "gecko": {
      "id": "mail-link@unruh.de",
      "strict_min_version": "78.0"
    }
  },
  "permissions": [
    "messagesRead",
    "storage",
    "clipboardWrite",
    "notifications"
  ],
  "background": {
    "scripts": ["copy.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "message_display_action": {
    "default_title": "Copy Link",
    "default_icon": "icon.svg"
  }
}
